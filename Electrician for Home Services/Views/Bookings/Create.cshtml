@model Electrician_for_Home_Services.Models.Booking

@{
    ViewBag.Title = "Booking";
    string Electrician = ViewBag.BookingTo;
    string SelectedDate = ViewBag.Date;
}

<div class="UpDownPadding SidePadding">
    <h2>Booking</h2>

    <div class="center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.BookingToUsername, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control text-box single-line" id="BookingToUsername" name="BookingToUsername" readonly="readonly" type="text" value ="@Electrician">
                        @Html.ValidationMessageFor(model => model.BookingToUsername, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="date" id="Date" name="Date" class="form-control" value="@SelectedDate">
                        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
