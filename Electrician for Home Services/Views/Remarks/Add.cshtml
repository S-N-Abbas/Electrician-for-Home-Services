@model Electrician_for_Home_Services.Models.Remark


<section class="section-6" data-aos="fade-up">
    <div class="container">
        <!-- Grid row-->
        <div class="row main" data-aos="fade-up" data-aos-delay="300">
            <!-- Grid column -->
            <div class="col-lg-4 col-sm-12">
                <div class="heading">
                    <h3>Add Remarks</h3>
                </div>
            </div>
            <div class="col-lg-8 col-sm-12">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                <div class="input-group">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <input class="form-control text-box single-line" id="RemarkToUsername" name="RemarkToUsername" readonly="readonly" hidden type="text" value="@ViewBag.RemarksTo">
                    @Html.EditorFor(model => model.Remarks)
                    @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                    <input type="submit" value="Add" class="btn btn-info" />
                </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
