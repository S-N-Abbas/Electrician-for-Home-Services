    <!-- Left and right controls -->
    <a class="carousel-control-prev" href="#p" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#p" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<!--Section-2-->
<div class="UpDownPadding">
    <section class="section-2">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-12 col-12 box-1">
                    <div class="row box" data-aos="fade-left" data-aos-delay="300">
                        <div class="col-lg-2 col-sm-12">
                            <i class="fa fa-bolt" aria-hidden="true"></i>
                        </div>
                        <div class="col-lg-10 col-sm-12">
                            <h3>@Html.ActionLink("Wiring", "Electricians", "People", new { filter = "Home Electrician" }, null)</h3>
                            <p>We have variety of electricains who can set up all the wiring of your house. UPS fitting, Solar or renewable energy technician.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-12 col-12 box-2">
                    <div class="row box" data-aos="fade-left" data-aos-delay="500">
                        <div class="col-lg-2 col-sm-12">
                            <i class="fa fa-bolt" aria-hidden="true"></i>
                        </div>
                        <div class="col-lg-10 col-sm-12">
                            <h3>@Html.ActionLink("Electrical", "Electricians", "People", new { filter = "Home Electrician" }, null)</h3>
                            <p>We have variety of electricains who can set up all the wiring of your house. UPS fitting, Solar or renewable energy technician.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-12 col-12 box-3">
                    <div class="row box" data-aos="fade-left" data-aos-delay="700">
                        <div class="col-lg-2 col-sm-12">
                            <i class="fa fa-desktop" aria-hidden="true"></i>
                        </div>
                        <div class="col-lg-10 col-sm-12">
                            <h3>@Html.ActionLink("Electronics", "Electricians", "People", new { filter = "Electronics" }, null)</h3>
                            <p>We have variety of electricains who can set up all the electronic devices of your house. LED TV, Dish Reciever, and Repairing at your finger tips.</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-sm-12 col-12 box-3">
                    <div class="row box" data-aos="fade-left" data-aos-delay="700">
                        <div class="col-lg-2 col-sm-12">
                            <i class="fa fa-car" aria-hidden="true"></i>
                        </div>
                        <div class="col-lg-10 col-sm-12">
                            <h3>@Html.ActionLink("Auto Mobile", "Electricians", "People", new { filter = "Auto Electrician" }, null)</h3>
                            <p>We have variety of electricains who can set up all the wiring of your motor vehicle. Fancy Lights, Decoration, Spare part fitting and much more.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
