@{
    ViewBag.Title = "Home Page";
}

<div id="p" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ul class="carousel-indicators">
        <li data-target="#p" data-slide-to="0" class="active"></li>
        <li data-target="#p" data-slide-to="1"></li>
        <li data-target="#p" data-slide-to="2"></li>
        <li data-target="#p" data-slide-to="3"></li>
    </ul>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/images/index.jpg" alt="Electricians">
            <div class="carousel-caption d-none d-md-block">
                <h1>Welcome to Electricians For Home Services</h1>
                <h2>experienced electricians at your door step</h2>
                <h4>One Click, That's it</h4>
                <p><a href="~/Home/About" class="btn btn-success">Learn More</a></p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/images/index2.jpg" alt="Electricians">
            <div class="carousel-caption d-none d-md-block">
                <h1>Welcome to Electricians For Home Services</h1>
                <h2>experienced electricians at your door step</h2>
                <h4>One Click, That's it</h4>
                <p><a href="~/Home/About" class="btn btn-success">Learn More</a></p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/images/index3.jpeg" alt="Electricians">
            <div class="carousel-caption d-none d-md-block">
                <h1>Welcome to Electricians For Home Services</h1>
                <h2>experienced electricians at your door step</h2>
                <h4>One Click, That's it</h4>
                <p><a href="~/Home/About" class="btn btn-success">Learn More</a></p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/images/index4.jpg" alt="Electricians">
            <div class="carousel-caption d-none d-md-block">
                <h1>Welcome to Electricians For Home Services</h1>
                <h2>experienced electricians at your door step</h2>
                <h4>One Click, That's it</h4>
                <p><a href="~/Home/About" class="btn btn-success">Learn More</a></p>
            </div>
        </div>
