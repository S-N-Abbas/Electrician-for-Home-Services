@model Electrician_for_Home_Services.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_FormLayout.cshtml";
    ViewBag.Title = "Register";
}


<div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">
            <div class="card-body">
                <h2 class="title">Registration Form</h2>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row row-space">
                        <div class="col-2">
                            <div class="input-group">
                                @Html.LabelFor(m => m.Email, new { @class = "label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "input--style-4" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="input-group">
                                @Html.LabelFor(m => m.Username, new { @class = "label" })
                                @Html.TextBoxFor(m => m.Username, new { @class = "input--style-4" })
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="row row-space">
                        <div class="col-2">
                            <div class="input-group">
                                @Html.LabelFor(m => m.Password, new { @class = "label" })
                                @Html.PasswordFor(m => m.Password, new { @class = "input--style-4" })
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="input-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "label" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input--style-4" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="p-t-15">
                        <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
