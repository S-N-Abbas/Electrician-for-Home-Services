@model IEnumerable<Electrician_for_Home_Services.Models.Remark>

@if (Model.Count() > 0)
{
    <section class="section-2">
        <div class="container">
            <h3>Remarks</h3>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-sm-12 col-12 box-1">
                        <div class="row box" data-aos="fade-left" data-aos-delay="300">
                            <div class="col-lg-12 col-sm-12">
                                <h3>@Html.ActionLink(item.RemarkByUsername, "Details", "People", new { id = item.RemarkByUsername }, null)</h3>
                                <p>@item.Remarks</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}